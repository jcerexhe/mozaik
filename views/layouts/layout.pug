    // TODO get api key
    script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDBDdJp6QvUCwioKrVs-42b8l8kOVqGqNY')
  body
    // React component for menu
    !=menu

    if locals.flashes
      - const categories = Object.keys(locals.flashes)
      each category in categories
        each message in flashes[category]
          div(class=`alert-${ category }`)!= h.dump(message)

    div(class=(currentPath === '/' ? 'content' : ''))
      block content

