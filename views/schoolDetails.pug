extends layouts/layout

block content
  .school-heading-container
    .school-heading
      .school-info
        img(src=school.logo)
        h1= school.name
      .school-links.video-link
        i(class="fa fa-play-circle-o fa-3x" aria-hidden="true")
        br
        p(class="video-text") Play Video
      .school-links
        .school-link
          a(href='#' onclick="createForm()" class='btn btn-full-width')
            span Enquire
        .school-link
          a(href='#' onclick="createForm()" class='btn btn-full-width')
            span Apply
        .school-link
          a(href=school.website, target='_blank' class='btn btn-full-width')
            span Visit Website
  .grey-bg
    .school-details
      .overview
        h2 overview
        p=school.overview
        a.btn(href=`/school/${school.slug}/courses`) view all courses
        a.btn(href=school.courseGuide) course guide
      .fees-scholarships
        h3 fees scholarship
        h4 price range
        ul
          each price in school.prices
            li
              =`${price.type}:`
              br
              =`AUD ${price.lower} - AUD ${price.upper}`
        h4 scholarship
        ul
          each scholarship in school.scholarships
            li=scholarship
        .campuses
          h3 campus locations
          ul
            each loc in school.locations
              li=loc.campus
        .delivery
          h3 delivery
          ul
            each delivery in school.delivery
              li=delivery
      .study-areas
        h3 study areas
        ul
          each area in school.disciplines
            li=area
  !=Lightbox
  .school-locations
    h2.school-details-subheading locations
    p=school.locationDescription
    !=CampusMaps
  .school-facilities
    h2.school-details-subheading facilities
    p=school.facilitiesDescription
    !=Facilities
  .school-alumni
    h2.school-details-subheading alumni
    !=Alumni
  .final-links
    a.btn(href='#' onclick="createForm()") enquiry
    a.btn(href='#' onclick="createForm()") apply

append stylesheets
  link(rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.css")
  link(rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick-theme.min.css")

  // if lte IE 8
  script(charset='utf-8', type='text/javascript', src='//js.hsforms.net/forms/v2-legacy.js')
  script(charset='utf-8', type='text/javascript', src='//js.hsforms.net/forms/v2.js')
