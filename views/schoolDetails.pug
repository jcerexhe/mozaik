extends layouts/layout

block content
  style(type="text/css").
    .art-box-2-diagonal{
      opacity: 0.9;
      background-image: url('http://res.cloudinary.com/mozaik/image/upload/c_fill,g_auto,h_800,w_800/v1/'+artworks[0].image + '.jpg') !important;
    }
  .school-heading-container(style={'background-image': 'url('+ school.header_image_1 +')'})
    .school-heading
      .school-info
        //- img(src=school.logo)
        h1= school.name
      .school-links.video-link
        img(src="/images/buttons/playvideo.png")
  .student-work
    !=Lightbox
  .school-overview-container(style={'background-image': 'url('+ school.header_image_2 +')'})
    img.scroll-down(src="/images/buttons/Scroll-Down.png")
    .school-logo
      img(src=school.logo)
    .school-overview
      if school.slug == 'full-sail-university-fsu'
        .details-box(style={'height': '1000px'})
          h2 overview
          p=school.overview
          h3 campus location
          ul
              each loc in school.locations
                li=loc.campus
          h3 delivery
          ul
              each delivery in school.delivery
                li=delivery
      else
        .details-box
          h2 overview
          p=school.overview
          h3 campus location
          ul
              each loc in school.locations
                li=loc.campus
          h3 delivery
          ul
              each delivery in school.delivery
                li=delivery
    .school-fees
      if school.slug == 'full-sail-university-fsu'
        .details-box(style={'height': '1000px'})
          h2 fees scholarship
          h3 price range
          ul
            each price in school.prices
              li
                =`${price.type}:`
                br
                =`AUD ${price.lower} - AUD ${price.upper}`
          h3 scholarship
          ul
            each scholarship in school.scholarships
              li=scholarship
      else
        .details-box
          h2 fees scholarship
          h3 price range
          ul
            each price in school.prices
              li
                =`${price.type}:`
                br
                =`AUD ${price.lower} - AUD ${price.upper}`
          h3 scholarship
          ul
            each scholarship in school.scholarships
              li=scholarship
    .school-links
        .school-link
          a(href='#' onclick="eForm()" class='btn')
            span Apply
        .school-link
          a(href='#' onclick="eForm()" class='btn')
            span Enquire
        .school-link
          a(href=school.website, target='_blank' class='btn')
            span Course Guide
  !=Courses
  .other-section
    .locations
      .other-section-box(style="background-image: url('/images/location.png')")
        h2 locations
    .facilities
      .other-section-box(style="background-image: url('/images/facilities.png')")
        !=Facilities
    .alumni
      .other-section-box(style="background-image: url('/images/alumni.png')")
        h2 alumni
  .school-contact
    .website
      a(href=school.website)=school.website
    .inside-scoop
        h3 get the inside scoop
        input(placeholder='Email address')
        br
        a.btn(href="#") subscribe
        // TODO insert enquiry form; hubspot?
